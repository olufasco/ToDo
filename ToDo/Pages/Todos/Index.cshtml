@page
@using ToDo.Pages.Todos
@model ToDo.Pages.Todos.IndexModel

<h1>📝 My To-Do List</h1>
<a asp-page="Create">➕ Add New Task</a>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model.Todos)
        {
            <tr>
                <td>@todo.Title</td>
                <td>@todo.Description</td>
                <td>@todo.IsCompleted</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@todo.Id">✏️ Edit</a> |
                    <a asp-page="Delete" asp-route-id="@todo.Id">🗑️ Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>